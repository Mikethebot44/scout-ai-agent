{
  "name": "@scout/daemon",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts"
    },
    "./shared": {
      "import": "./src/shared.ts"
    },
    "./raw-txt": {
      "import": "./dist/raw.txt",
      "types": "./src/raw-txt.d.ts"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "node scripts/build.mjs",
    "dev": "nodemon --watch src --ext ts,js --exec \"pnpm run build\"",
    "start": "node dist/index.js",
    "test": "vitest",
    "tsc-watch": "tsc --noEmit --watch --preserveWatchOutput",
    "tsc-check": "tsc --noEmit",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\""
  },
  "dependencies": {
    "@scout/agent": "workspace:*",
    "nanoid": "^5.1.5",
    "strip-ansi": "^7.1.0",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@google/gemini-cli-core": "^0.16.0",
    "@openai/codex-sdk": "^0.46.0",
    "@opencode-ai/sdk": "^0.15.16",
    "@types/node": "^22.10.2",
    "esbuild": "^0.24.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
